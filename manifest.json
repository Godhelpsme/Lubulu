    {
      "name": "转动轮盘",
      "short_name": "转动",
      "description": "直接转动健康决策轮盘",
      "url": "/?shortcut=spin",
      "icons": [
        {
          "src": "/icons/spin-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "查看统计",
      "short_name": "统计", 
      "description": "查看健康决策历史统计",
      "url": "/?shortcut=stats",
      "icons": [
        {
          "src": "/icons/stats-96x96.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    },
    {
      "name": "查看日历",
      "short_name": "日历",
      "description": "查看决策历史日历",
